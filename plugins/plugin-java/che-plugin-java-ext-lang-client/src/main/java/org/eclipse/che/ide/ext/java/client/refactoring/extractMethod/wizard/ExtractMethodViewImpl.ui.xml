<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="locale" type="org.eclipse.che.ide.ext.java.client.JavaLocalizationConstant"/>

    <ui:style>
        @eval highlightsColor org.eclipse.che.ide.api.theme.Style.getButtonDisabledFontColor();

        .main {
            width: 515px;
            margin-top: 5px;
            margin-left: 5px;
        }

        .label {
            float: left;
            margin-left: 6px;
            margin-top: 6px;
            margin-right: 10px;
        }

        .checkBox {
            float: left;
            margin-left: 6px;
            margin-top: 6px;
        }

        .panelHeight {
            float: left;
            width: 100%;
            height: 25px;
        }

        .errorPanelHeight {
            float: left;
            width: 100%;
            height: 45px;
            margin-top: 40px;
        }

        .methodNamePanel {
            float: left;
            width: 100%;
            height: 25px;
            margin-bottom: 10px;
        }

        .headerPanel {
            height: 60px;
            width: 100%;
        }

        .newNameInput {
            float: left;
            width: 80%;
            margin-top: 6px;
        }

        .updateReferencePanel {
            width: 100%;
            height: 35px;
        }

        .listBox {
            float: left;
            margin-left: 15px;
            margin-top: 15px;
        }

        .parametersTable {
            margin-left: 45px;
            margin-right: 40px;
            width: 100%;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.main}">

        <g:FlowPanel ui:field="headerPanelToHide" addStyleNames="{style.headerPanel}">

            <g:FlowPanel addStyleNames="{style.methodNamePanel}">
                <g:Label text="{locale.renameNewName}" addStyleNames="{style.label}"/>
                <g:TextBox ui:field="methodName" addStyleNames="{style.newNameInput}"/>
            </g:FlowPanel>

            <g:FlowPanel addStyleNames="{style.updateReferencePanel}">
                <g:CheckBox ui:field="updateReferences" addStyleNames="{style.checkBox}" value="true"/>
                <g:Label text="{locale.renameUpdateReferences}" addStyleNames="{style.label}"/>
            </g:FlowPanel>

        </g:FlowPanel>

        <g:FlowPanel ui:field="subSettings">

            <g:FlowPanel ui:field="extractMethodSubpackagesPanel" addStyleNames="{style.panelHeight}">
                <g:CheckBox ui:field="declareStatic" addStyleNames="{style.checkBox}"/>
                <g:CheckBox ui:field="foldParameters" addStyleNames="{style.checkBox}"/>
                <g:CheckBox ui:field="declareVarArgs" addStyleNames="{style.checkBox}"/>
                <g:Label text="{locale.extractMethodSubpackages}" addStyleNames="{style.label}"/>
            </g:FlowPanel>

        </g:FlowPanel>

        <g:FlowPanel ui:field="modifierBoxPanel">

            <g:ListBox ui:field="modifierBox" addStyleNames="{style.listBox}" ></g:ListBox>

        </g:FlowPanel>

        <g:FlowPanel ui:field="typeBoxPanel">

            <g:ListBox ui:field="returnTypeBox" addStyleNames="{style.listBox}" ></g:ListBox>

        </g:FlowPanel>

        <g:FlowPanel ui:field="parametersTablePanel">

            <g:FlexTable ui:field="parametersTable" addStyleNames="{style.parametersTable}" ></g:FlexTable>

        </g:FlowPanel>

        <!--error label-->
        <g:FlowPanel addStyleNames="{style.errorPanelHeight}">
            <g:SimplePanel ui:field="icon"/>
            <g:Label ui:field="errorLabel" addStyleNames="{style.label}"/>
        </g:FlowPanel>

    </g:FlowPanel>

</ui:UiBinder>
